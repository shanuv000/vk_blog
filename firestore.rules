rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read comments
    match /comments/{commentId} {
      allow read: if true;
      
      // Allow anyone to create comments, but with validation
      allow create: if 
        // Require these fields
        request.resource.data.keys().hasAll(['postSlug', 'name', 'content', 'createdAt']) &&
        
        // Validate field types
        request.resource.data.postSlug is string &&
        request.resource.data.name is string &&
        request.resource.data.content is string &&
        request.resource.data.createdAt is timestamp &&
        
        // Content must not be empty
        request.resource.data.content.trim().size() > 0 &&
        
        // Content must not be too long (limit to 2000 characters)
        request.resource.data.content.size() <= 2000 &&
        
        // Name must not be too long (limit to 50 characters)
        request.resource.data.name.size() <= 50;
      
      // Don't allow updates or deletes from client
      allow update, delete: if false;
    }
    
    // Deny access to all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
